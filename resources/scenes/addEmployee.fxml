<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="Controllers.AddEmployeeController"
          prefHeight="600.0" prefWidth="400.0">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <HBox spacing="10" translateX="95" translateY="40">
        <Label prefWidth="100" style="-fx-font: NORMAL 20 Tahoma;" text="Pesel"/>
        <TextField promptText="Pesel" prefWidth="100" fx:id="peselTextField" focusTraversable="false"/>
    </HBox>

    <HBox spacing="10" translateX="95" translateY="100">
        <Label prefWidth="100" style="-fx-font: NORMAL 20 Tahoma;" text="Name"/>
        <TextField promptText="Name" prefWidth="100" fx:id="nameTextField" focusTraversable="false"/>
    </HBox>

    <HBox spacing="10" translateX="95" translateY="160">
        <Label prefWidth="100" style="-fx-font: NORMAL 20 Tahoma;" text="Surname"/>
        <TextField promptText="Surname" prefWidth="100" fx:id="surnameTextField" focusTraversable="false"/>
    </HBox>

    <VBox spacing="10" translateX="95" translateY="210">
        <Label style="-fx-font: NORMAL 20 Tahoma;" text="Email Address"/>
        <TextField promptText="Email Address" prefWidth="100" fx:id="emailTextField" focusTraversable="false"/>
    </VBox>

    <HBox spacing="10" translateX="95" translateY="290">
        <Label prefWidth="100" style="-fx-font: NORMAL 20 Tahoma;" text="Password"/>
        <PasswordField promptText="Password" prefWidth="100" fx:id="passwordTextField" focusTraversable="false"/>
    </HBox>

    <HBox spacing="10" translateX="95" translateY="350">
        <Label prefWidth="100" style="-fx-font: NORMAL 20 Tahoma;" text="Salary"/>
        <TextField promptText="Salary" prefWidth="100" fx:id="salaryTextField" focusTraversable="false"/>
    </HBox>

    <VBox spacing="10" translateX="95" translateY="400">
        <Label translateX="5" style="-fx-font: NORMAL 20 Tahoma;" text="Bank Account Number"/>
        <TextField promptText="Bank Account Number" prefWidth="100" fx:id="bankAccountTextField" focusTraversable="false"/>
    </VBox>

    <ComboBox fx:id="accessLevelComboBox" prefWidth="210" translateX="95" translateY="460" promptText="accessLevel"/>
    <Button text="Confirm" onAction="#handleConfirm" translateX="125" translateY="505"/>
    <Button text="Cancel" onAction="#handleCancel" translateX="225" translateY="505"/>
</GridPane>
