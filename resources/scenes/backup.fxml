<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="Controllers.BackupController"
          minHeight="430.0" prefWidth="420.0">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Button GridPane.rowIndex="0" GridPane.columnIndex="0" text="Backup" style="-fx-font: NORMAL 40 Tahoma;" prefWidth="400" prefHeight="190" onAction="#handleBackup"/>
    <Button translateY="10" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font: NORMAL 40 Tahoma;" text="Restore" prefWidth="400" prefHeight="190" onAction="#handleRestore"/>
    <Button translateX="150" translateY="15" GridPane.rowIndex="2" GridPane.columnIndex="0" text="Back" prefWidth="100" onAction="#handleBack"/>

</GridPane>
