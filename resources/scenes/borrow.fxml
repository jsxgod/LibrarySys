<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="Controllers.BorrowController"
          prefHeight="300.0" prefWidth="400.0">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <HBox spacing="10" translateX="95" translateY="40">
        <Label prefWidth="100" style="-fx-font: NORMAL 20 Tahoma;" text="Book ID"/>
        <TextField promptText="BookID" prefWidth="100" fx:id="bookIDTextField" focusTraversable="false"/>
    </HBox>

    <HBox spacing="10" translateX="95" translateY="100">
        <Label prefWidth="100" style="-fx-font: NORMAL 20 Tahoma;" text="Pesel"/>
        <TextField promptText="Pesel" prefWidth="100" fx:id="peselTextField" focusTraversable="false"/>
    </HBox>

    <Button text="Borrow" onAction="#handleBorrow" translateX="125" translateY="150"/>
    <Button text="Cancel" onAction="#handleCancel" translateX="200" translateY="150"/>
</GridPane>
