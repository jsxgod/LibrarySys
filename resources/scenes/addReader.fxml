<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="Controllers.AddReaderController"
          prefHeight="500.0" prefWidth="400.0">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <HBox spacing="10" translateX="95" translateY="40">
        <Label prefWidth="100" style="-fx-font: NORMAL 20 Tahoma;" text="Pesel"/>
        <TextField promptText="Pesel" prefWidth="100" fx:id="peselTextField" focusTraversable="false"/>
    </HBox>

    <HBox spacing="10" translateX="95" translateY="100">
        <Label prefWidth="100" style="-fx-font: NORMAL 20 Tahoma;" text="Name"/>
        <TextField promptText="Name" prefWidth="100" fx:id="nameTextField" focusTraversable="false"/>
    </HBox>

    <HBox spacing="10" translateX="95" translateY="160">
        <Label prefWidth="100" style="-fx-font: NORMAL 20 Tahoma;" text="Surname"/>
        <TextField promptText="Surname" prefWidth="100" fx:id="surnameTextField" focusTraversable="false"/>
    </HBox>

    <HBox spacing="10" translateX="95" translateY="220">
        <Label prefWidth="100" style="-fx-font: NORMAL 20 Tahoma;" text="Email"/>
        <TextField promptText="email" prefWidth="100" fx:id="emailTextField" focusTraversable="false"/>
    </HBox>

    <HBox spacing="10" translateX="95" translateY="280">
        <Label prefWidth="100" style="-fx-font: NORMAL 20 Tahoma;" text="Birthday"/>
        <DatePicker fx:id="birthdayDatePicker" focusTraversable="false"/>
    </HBox>

    <Button text="Confirm" onAction="#handleConfirm" translateX="150" translateY="330" defaultButton="true"/>
</GridPane>